function [fx, DDT] = Divided_Difference(mesh, f, precision)

% First evaluate the function in single/double pt. precision
fx = cast(f(mesh), precision); 
n = lenght(mesh)-1; % from n+1 data points

DDT = zeros(1:n+1,1:n+1); % Initialize the divided difference table
DDT(1,:) = fx; % Initialize first column as function evaluations 

for i = 2:length(mesh)
    for i=1:(n-j+1) 
        num = DD(i+1, j-1) - DD(i, j-1);
        den = x(i+j-1) - x(i);
        DDT(i, j) = num / den;
    end
end 